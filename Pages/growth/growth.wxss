.growth-menu{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #ffffff;
}
.growth-menu .empty{
   float: left;
    width: 100%;
    height: 10rpx;
}

.item {
  float: left;
  width: 100%;
  height: 50rpx; 
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding: 25rpx; 
  text-align:left;
  background:#6495ED;
}
.item .image{
 width: 80rpx;
 height: 80rpx;
}
.item .a {
  margin-left: 15rpx;
}
.item .txt{
    display: block;
    height: 30rpx;
    width: 100%;
    font-size: 38rpx;
    margin-left: 10rpx;
    margin-bottom: 15rpx;
    color: #ffffff;
}






.growth-menu .txt{
    display: block;
    height: 24rpx;
    width: 100%;
    font-size: 38rpx;
    color: #FFFFFF;
}