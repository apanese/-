.title{
    display: block;
    height: 24rpx;
    width: 100%;
    font-size: 20pt;
    color: #FFFFFF;
    text-align: center;
    font-weight: bolder;
    letter-spacing: 15rpx;
}

.notice-menu{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #f4f4f4;
}

.notice-menu .item{
    float: left;
    width: 100%;
    height: 90rpx;
    border-right: 1px solid rgba(0,0,0,.15);
    border-bottom: 1px solid rgba(0,0,0,.15);    
    text-align:left;
    background: #fff;
}

.notice-menu .a{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction:column;
  align-items: center;
  justify-content: center;
}

.notice-menu .txt{
   display: block;
    height: 24rpx;
    width: 100%;
    font-size: 12pt;
    color:#333;
    margin-left: 20rpx;
}